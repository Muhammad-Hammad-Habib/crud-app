<%- include('./comm/header.ejs') %>
<style>
  div {
    padding: 5px 10px 5px 10px !important;
  }
</style>
<div class="container text-center mx-auto p-2">
  <div class="row">
    <div class="col p-2 g-col-6 mt-5">
      <form class="row" method="put">
        <!-- g-3 -->
        <div class="col-md-2 align-self-start">
          <label for="name" class="form-label">Name</label>
        </div>
        <div class="col-md-10 align-self-start">
          <input type="text" class="form-control" name="name" id="name" />
        </div>

        <div class="col-md-2 align-self-start">
          <label for="age" class="form-label">Age</label>
        </div>
        <div class="col-md-10">
          <input type="number" class="form-control" name="age" id="age" />
        </div>

        <div class="col-md-2">
          <label for="date" class="form-label">Date</label>
        </div>

        <div class="col-md-10">
          <input type="date" class="form-control" name="date" id="date" />
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
    <div class="col p-2 g-col-6 mt-5"></div>
  </div>
</div>

<%- include('./comm/footer.ejs') %>
