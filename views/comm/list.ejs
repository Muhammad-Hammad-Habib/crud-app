<table class="table table-striped-columns">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Date</th>
      <th scope="col">Edit-Delete</th>
    </tr>
  </thead>
  <tbody>
    <% var i = 1; %> <% data.forEach(item => { %>
    <tr>
      <th scope="row"><%= i++ %></th>
      <td><%= item.name %></td>
      <td><%= item.age %></td>
      <td><%= item.date %></td>
      <td>
        <form
          action="/student/edit/<%= item.id %>"
          method="get"
          class="d-inline"
        >
          <button type="submit">
            <i class="fas fa-pen-square text-info"></i>
          </button>
        </form>

        <form
          action="/student/delete/<%= item.id %>"
          method="post"
          class="d-inline"
        >
          <button type="submit">
            <i class="fas fa-trash text-danger"></i>
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
